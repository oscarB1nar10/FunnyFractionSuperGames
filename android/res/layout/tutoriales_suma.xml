<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="73dp">

    <TextView
        android:id="@+id/titulo_suma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:text="@string/txtsumhomo"
        android:textSize="19dp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toStartOf="@+id/retornarsum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txteoriasum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:text="@string/txteoriasumhomo"
        android:textSize="17dp"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/txteoriasum2"
        app:layout_constraintEnd_toStartOf="@+id/retornarsum"
        app:layout_constraintHorizontal_bias="0.734"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txteoriasum2"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginEnd="83dp"
        android:layout_marginStart="83dp"
        android:text="@string/txteoriasumhete"
        android:textSize="17dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/suma1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/suma1" />

    <ImageView
        android:id="@+id/suma1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/suma2"
        app:layout_constraintStart_toStartOf="@+id/txteoriasum2"
        app:layout_constraintTop_toBottomOf="@+id/titulo_suma"
        app:srcCompat="@drawable/fracsumhomo" />

    <ImageView
        android:id="@+id/suma2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="13dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/suma1"
        app:layout_constraintEnd_toStartOf="@+id/retornarsum"
        app:layout_constraintStart_toStartOf="@+id/suma4"
        app:layout_constraintTop_toTopOf="@+id/suma1"
        app:srcCompat="@drawable/fracsumhomo2" />

    <ImageView
        android:id="@+id/suma3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="22dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/suma1"
        app:layout_constraintStart_toStartOf="@+id/txteoriasum2"
        app:srcCompat="@drawable/fracsumhete" />

    <ImageView
        android:id="@+id/suma4"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:layout_marginBottom="67dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="65dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nextsum"
        app:layout_constraintStart_toEndOf="@+id/suma3"
        app:layout_constraintTop_toTopOf="@+id/suma1"
        app:srcCompat="@drawable/fracsumhete2" />

    <ImageView
        android:id="@+id/backsum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/nextsum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="18dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/retornarsum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titulo_suma"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/devolver" />

</android.support.constraint.ConstraintLayout>